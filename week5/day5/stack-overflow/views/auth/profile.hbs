{{#if status}}
<div style="padding-top: 10vh;" class="alert-success" role="alert">
  Question Created
</div>
{{/if}}

<form class="pt-5" action="/questions/create" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="textarea-body">Your question</label>
    <textarea name="body" class="form-control" id="textarea-body" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="form-tags-1">Tags</label>
    <input name="tags" id="form-tags-1" type="text" class="form-control">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Ask</button>
  </div>
</form>

<a href="/logout">Logout</a>